@model IEnumerable<WEBTHAY_LEVANHAI_2122110022.Models.Category>

@{
    ViewBag.Title = "Index";
}

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
    <div class="container">

        <nav class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="card card-category">
                        <div class="img-wrap">
                            <a href="@Url.Action("ProductByCategoryId", "Category", new { id = item.id })">
                                <img src="~/Content/images/categories/@item.Image" alt="@item.name">
                            </a>
                        </div>
                        <div class="card-body">
                            <h4 class="card-title"><a href="#">@Html.ActionLink(item.name, "ProductByCategoryId", "Category", new { id = item.id }, null)</a></h4>
                            <ul class="list-menu">
                                @*@foreach (var item2 in Model)
                                    {
                                        <li><a href="">@Html.DisplayFor(modelItem => item2.name)</a></li>
                                    }*@
                            </ul>
                        </div>
                    </div>
                </div> <!-- col.// -->
            }


        </nav> <!-- row.// -->


    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
<!-- ========================= SECTION SUBSCRIBE  ========================= -->
