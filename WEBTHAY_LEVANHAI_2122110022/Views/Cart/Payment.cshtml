@model WEBTHAY_LEVANHAI_2122110022.Models.PaymentModel

@{
    ViewBag.Title = "Payment";
}

<div class="container">
    <h2 class="mt-4 mb-4">Thanh toán thành công</h2>

    <div class="alert alert-success">
        <strong>Chúc mừng!</strong> Đơn hàng của bạn đã được thanh toán thành công.
    </div>

    <h4>Chi tiết đơn hàng</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Giá đơn vị</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@String.Format("{0:0,0}", item.Product.Sale_price ?? item.Product.Price) VND</td>
                    <td>@String.Format("{0:0,0}", (item.Product.Sale_price ?? item.Product.Price) * item.Quantity) VND</td>
                </tr>
            }
        </tbody>
    </table>

    <h4 class="text-right mt-4">Tổng cộng: <strong>@String.Format("{0:0,0}", Model.TotalPrice) VND</strong></h4>

    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Quay về trang chủ</a>
    </div>
</div>
