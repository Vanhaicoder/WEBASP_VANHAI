@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<WEBTHAY_LEVANHAI_2122110022.Models.Order>

@{
    ViewBag.Title = "Order List";
}

<style>
    .content-wrapper {
        padding: 20px;
        font-family: Arial, sans-serif;
    }

        .content-wrapper h2 {
            margin-bottom: 20px;
            color: #333;
        }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .table th, .table td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
            vertical-align: middle;
        }

        .table th {
            background-color: #f8f9fa;
            font-weight: bold;
            color: #333;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table img {
            max-width: 100px;
            height: auto;
            border-radius: 4px;
        }

    /* Styling for buttons */
    .btn {
        display: inline-block;
        padding: 8px 16px;
        font-size: 14px;
        font-weight: bold;
        text-decoration: none;
        text-align: center;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-success {
        background-color: #28a745;
        color: white;
        border: none;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-danger {
        background-color: #dc3545;
        color: white;
        border: none;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    /* Specific styling for Edit, Details, and Delete links */
    .action-link {
        padding: 6px 12px;
        margin-right: 5px;
        border-radius: 4px;
        text-decoration: none;
        color: white;
    }

    .edit-link {
        background-color: #007bff;
    }

        .edit-link:hover {
            background-color: #0056b3;
        }

    .details-link {
        background-color: #28a745;
    }

        .details-link:hover {
            background-color: #218838;
        }

    .delete-link {
        background-color: #dc3545;
    }

        .delete-link:hover {
            background-color: #c82333;
        }

    /* Styling for pagination */
    .pagination {
        display: flex;
        justify-content: center;
        padding: 20px 0;
        list-style-type: none;
    }

        .pagination a, .pagination span {
            margin: 0 5px;
            padding: 8px 16px;
            text-decoration: none;
            color: #007bff;
            border: 1px solid #dee2e6;
            border-radius: 4px;
            background-color: transparent;
        }

            .pagination a:hover, .pagination a:focus {
                background-color: #e9ecef;
                color: #0056b3;
            }

        .pagination .active span {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
        }

    /* Styling for search input and button */
    .form-group {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

        .form-group input[type="text"] {
            padding: 10px;
            margin-right: 10px;
            width: 300px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .form-group .btn-primary {
            margin-top: 0;
        }

    /* Additional spacing for the Create New button */
    .content-wrapper p {
        margin-bottom: 20px;
    }
</style>

<div class="content-wrapper">
    <h2>Quản lý đơn hàng</h2>

    <!-- Tìm kiếm -->
    @using (Html.BeginForm("Index", "Order", FormMethod.Get))
    {
        <div class="form-group">
            <label for="searchString">Tìm kiếm đơn hàng:</label>
            <input type="text" name="searchString" id="searchString" value="@ViewBag.CurrentFilter" class="form-control" />
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
        </div>
    }

    <!-- Bảng dữ liệu -->
    <table class="table">
        <thead>
            <tr>
                <th>Delivery Name</th>
                <th>Gender</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Note</th>
                <th>Type</th>
                <th>Status</th>
                <th>User Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Delivery_name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Delivery_gender)</td>
                    <td>@Html.DisplayFor(modelItem => item.Delivery_email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Delivery_phone)</td>
                    <td>@Html.DisplayFor(modelItem => item.Delivery_address)</td>
                    <td>@Html.DisplayFor(modelItem => item.Note)</td>
                    <td>@Html.DisplayFor(modelItem => item.Type)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td> @(item.User != null ? $"{item.User.FirstName} {item.User.LastName}" : "N/A")</td>
                    <td>
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }, new { @class = "action-link details-link" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "action-link delete-link" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Phân trang -->
    <div class="pagination">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter }))
    </div>
</div>
